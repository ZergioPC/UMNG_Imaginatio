---
  import IconBack from "../react/Icons/IconBack"
---

<header>
  <div>
    <span>Imaginatio</span>
    <span>Admin</span>
  </div>

  <a href="/">
    <IconBack client:load color="#000"/>
  </a>
</header>

<style>
  header {
    box-sizing: border-box;
    z-index: 3;
    position: fixed;
    display: flex;
    justify-content: space-between;
    padding: 10px 20px;
    width: 100%;
    height: 60px;
    background-color: #fff;
    border-bottom: solid 4px #000;
  }

  span {
    margin: 0 5px;
    font-family: "Imaginatio";
    font-size: 1.5rem;
  }
  
  a {
    display: block;
    height: 40px;
    width: 40px;
  }
</style>