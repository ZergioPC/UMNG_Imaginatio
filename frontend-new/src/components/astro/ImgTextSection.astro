---
import { Image } from "astro:assets";

const {
  image,
  text,
  version,
  width,
  height,
} = Astro.props;
---

<article>
  <div class="image-wrapper">
    <Image
      src={image}
      alt={"Poster del imaginatio " + version}
      width={width}
      height={height}
    />
  </div>

  <div class="content">
    <span class="version">EdiciÃ³n {version}</span>
    <p>{text}</p>
  </div>
</article>

<style>
  /* ---------- CARD ---------- */

  article {
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
    padding: 1.25rem;
    border-radius: 20px;
    width: 70vw;

    background: linear-gradient(
      135deg,
      var(--card-grad-from),
      var(--card-grad-to)
    );
    
    font-size: 1.2rem;
    color: var(--card-text);
    cursor: pointer;

    overflow: hidden; /* ðŸ”‘ solo aquÃ­ se corta */
    perspective: 1200px;

    animation: enter 0.7s cubic-bezier(.22,.61,.36,1) both;
    transition: box-shadow 0.4s ease;
  }

  article:hover {
    box-shadow: 0 30px 60px rgba(0,0,0,0.25);
  }

  /* ---------- IMAGE ---------- */

  .image-wrapper {
    position: relative;
    flex-shrink: 0;
    width: 240px;

    border-radius: 16px;
    transform-style: preserve-3d;
  }

  article :global(img) {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;

    border-radius: 16px;

    transform:
      rotateY(0deg)
      rotateX(0deg)
      translateZ(0);

    transition:
      transform 0.6s cubic-bezier(.22,.61,.36,1),
      filter 0.4s ease;
  }

  /* Glow flotante */
  .image-wrapper::after {
    content: "";
    position: absolute;
    inset: -20%;
    background: radial-gradient(
      circle at top left,
      rgba(var(--card-glow), 0.45),
      transparent 60%
    );
    opacity: 0;
    transform: translateZ(-1px);
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  article:hover :global(img) {
    transform:
      rotateY(22deg)
      rotateX(6deg)
      translateZ(30px)
      scale(1.05);

    filter: saturate(1.15) contrast(1.08);
  }

  article:hover .image-wrapper::after {
    opacity: 1;
  }

  /* ---------- CONTENT ---------- */

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.4rem;
  }

  .version {
    font-size: 0.75em;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 600;
    opacity: 0.85;
  }

  p {
    margin: 0;
    font-size: 1rem;
    line-height: 1.55;
    opacity: 0.9;

    transform: translateY(6px);
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  article:hover p {
    transform: translateY(0);
    opacity: 1;
  }

  /* ---------- MOBILE ---------- */

  @media (max-width: 640px) {
    article {
      flex-direction: column;
    }

    .image-wrapper {
      width: 100%;
      aspect-ratio: 16 / 9;
    }

    article:hover :global(img) {
      transform:
        rotateY(0deg)
        rotateX(4deg)
        translateZ(20px)
        scale(1.04);
    }
  }

  /* ---------- MOTION SAFETY ---------- */

  @media (prefers-reduced-motion: reduce) {
    article,
    article * {
      animation: none !important;
      transition: none !important;
      transform: none !important;
    }
  }

  @keyframes enter {
    from {
      opacity: 0;
      transform: translateY(18px) scale(0.96);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
</style>
